@model IEnumerable<Online_Portal.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="mb-5">Laptop Portal</header>

<div class="products-wrapper overflow-hidden mb-5">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <div class="filter-wrapper">
                <div class="text-center mb-3">
                    <h5>Filters</h5>
                </div>
                <form method="get">
                    <div class="mb-2">
                        <label>Category</label>
                        @Html.DropDownList("CategoryId", new SelectList(ViewBag.categories, "Id", "Name"), "--Select Category--", new { @class = "form-control" })
                    </div>
                    <div class="mb-2">
                        <label>Brand</label>
                        <input type="text" name="brand" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label>Processor</label>
                        <input type="text" name="processor" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label>Color</label>
                        <input type="text" name="color" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Search</button>
                </form>

            </div>
            
        </div>
        <div class="col-md-8 col-sm-12">
            <div class="product-wrapper">
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-12">
                                <div class="card">
                                    <div class="img-container">
                                        <div class="d-flex justify-content-between align-items-center p-2 first"> </div> <img src="@item.MainImg.Replace("~","")" class="img-fluid">
                                    </div>
                                    <div class="product-detail-container">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@item.ProductName</h6> <span class="text-danger font-weight-bold">$@item.Price</span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <div class="brand-name"> <span>@item.BrandName</span> </div>
                                            <div class="color"> <span>@item.Color</span></div>
                                        </div>
                                        <div class="mt-3"> <button onclick="window.location.href = '/product/details/@item.ProductId'" class="btn btn-primary btn-block w-100">Details</button> </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

